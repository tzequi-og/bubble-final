<div>
  <div>
    <h1>
      Director #<%= @the_director.id %> details
    </h1>

    <div>
      <div>
        <a href="/directors">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_director/<%= @the_director.id %>">
          Delete director
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_director.name %>
      </dd>

      <dt>
        Dob
      </dt>
      <dd>
        <%= @the_director.dob %>
      </dd>

      <dt>
        Bio
      </dt>
      <dd>
        <%= @the_director.bio %>
      </dd>

      <dt>
        Imdb
      </dt>
      <dd>
        <%= @the_director.imdb_id %>
      </dd>

      <dt>
        Movies count
      </dt>
      <dd>
        <%= @the_director.movies_count %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_director.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_director.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit director
    </h2>

    <form action="/modify_director/<%= @the_director.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_director.name %>">
      </div>

      <div>
        <label for="dob_box">
          Dob
        </label>

        <input type="date" id="dob_box" name="query_dob" value="<%= @the_director.dob %>">
      </div>

      <div>
        <label for="bio_box">
          Bio
        </label>

        <textarea id="bio_box" name="query_bio"><%= @the_director.bio %></textarea>
      </div>

      <div>
        <label for="imdb_id_box">
          Imdb
        </label>

        <input type="text" id="imdb_id_box" name="query_imdb_id" value="<%= @the_director.imdb_id %>">
      </div>

      <div>
        <label for="movies_count_box">
          Movies count
        </label>

        <input type="text" id="movies_count_box" name="query_movies_count" value="<%= @the_director.movies_count %>">
      </div>

      <button>
        Update director
      </button>
    </form>
  </div>
</div>

<hr>
